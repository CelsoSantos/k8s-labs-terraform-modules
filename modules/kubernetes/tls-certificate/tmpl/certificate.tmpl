apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: ${secret_name}
  namespace: ${namespace}
spec:
  secretName: ${secret_name}
  dnsNames:
    - ${domain_name}
  acme:
    config:
      - dns01:
          provider: route53
        domains:
          - ${domain_name}
  issuerRef:
    name: ${issuer_ref}
    kind: ClusterIssuer
  commonName: ${domain_name}
  dnsNames:
    - ${domain_name}
